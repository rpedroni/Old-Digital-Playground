{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true,
      "templateStrings": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "rules": {
    "indent": ["warn", 2],
    "no-console": "off"
  },
  "plugins": [
    "babel",
    "react"
  ],
  "globals": {
    "__DEV__": false,
    "__PRERELEASE__": false
  }
}
